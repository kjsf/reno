<!-- prettier-ignore -->
<%= form_for @changeset, @action, fn f -> %>

<%= if @changeset.action do %>
<div class="alert alert-danger">
  <p>Something went wrong! Please check the errors below.</p>
</div>
<% end %>

<!-- prettier-ignore -->
<%= label f, :title %>
<%= text_input f, :title %>
<%= error_tag f, :title %>


<%= label f, :content %>
<%= textarea f, :content %>
<%= error_tag f, :content %>


<%= submit "Submit" %>
<% end %>
